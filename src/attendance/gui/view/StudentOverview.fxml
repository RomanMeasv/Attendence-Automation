<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="600.0" minWidth="400.0" stylesheets="@css/AttendanceStyle.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="attendance.gui.controller.StudentOverviewController">
   <children>
      <DatePicker fx:id="datePicker" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" onAction="#getSpecificDate" VBox.vgrow="NEVER">
         <VBox.margin>
            <Insets bottom="4.0" />
         </VBox.margin>
         <styleClass>
            <String fx:value="text-h4" />
            <String fx:value="font-s12" />
            <String fx:value="txt-bold" />
            <String fx:value="border-col1" />
         </styleClass>
      </DatePicker>
      <HBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="400.0" minWidth="200.0" VBox.vgrow="ALWAYS">
         <children>
            <TableView fx:id="tbvLessons" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="400.0" minWidth="100.0" HBox.hgrow="ALWAYS">
               <columns>
                  <TableColumn fx:id="colLessons" prefWidth="-1.0" text="Lessons" />
                  <TableColumn fx:id="colStart" prefWidth="-1.0" text="Start" />
                  <TableColumn fx:id="colEnd" prefWidth="-1.0" text="End" />
               </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
               <styleClass>
                  <String fx:value="bc-col4" />
                  <String fx:value="font-s12" />
                  <String fx:value="text-h4" />
                  <String fx:value="border-col1" />
               </styleClass>
               <HBox.margin>
                  <Insets right="4.0" />
               </HBox.margin>
            </TableView>
            <TableView fx:id="tbvAttendance" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="400.0" minWidth="100.0" HBox.hgrow="ALWAYS">
               <columns>
                  <TableColumn fx:id="colArrival" prefWidth="-1.0" text="Arrived" />
                  <TableColumn fx:id="colLeft" prefWidth="-1.0" text="Left" />
               </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
               <styleClass>
                  <String fx:value="bc-col4" />
                  <String fx:value="font-s12" />
                  <String fx:value="text-h4" />
                  <String fx:value="border-col1" />
               </styleClass>
            </TableView>
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
   </padding>
</VBox>
