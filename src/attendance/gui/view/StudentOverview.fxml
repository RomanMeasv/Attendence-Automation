<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>

<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<?import javafx.scene.layout.AnchorPane?>
<AnchorPane stylesheets="@css/AttendanceStyle.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="attendance.gui.controller.StudentOverviewController">

<VBox alignment="CENTER_LEFT" prefHeight="300.0" prefWidth="400.0" stylesheets="@css/AttendanceStyle.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="attendance.gui.controller.StudentOverviewController">
   <children>
      <Label alignment="BOTTOM_CENTER" maxHeight="-Infinity" text="Attendence">
         <styleClass>
            <String fx:value="text-h2" />
            <String fx:value="txt-col1" />
         </styleClass>
      </Label>
      
      <HBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="275.0" prefWidth="400.0">
         <children>
            <DatePicker fx:id="datePicker" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" onAction="#getSpecificDate">
               <VBox.margin>
                  <Insets bottom="4.0" />
               </VBox.margin>
            </DatePicker>
            <HBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="275.0" prefWidth="400.0">
               <children>
                  <TableView fx:id="tbvLessons" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" prefHeight="200.0" prefWidth="200.0">
                    <columns>
                      <TableColumn fx:id="colLessons" prefWidth="-1.0" text="Lessons" />
                        <TableColumn fx:id="colStart" prefWidth="-1.0" text="Start" />
                        <TableColumn fx:id="colEnd" prefWidth="-1.0" text="End" />
                    </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                     <styleClass>
                        <String fx:value="bc-col4" />
                        <String fx:value="font-s12" />
                        <String fx:value="text-h4" />
                        <String fx:value="border-col1" />
                     </styleClass>
                     <HBox.margin>
                        <Insets right="4.0" />
                     </HBox.margin>
                  </TableView>
                  <TableView fx:id="tbvAttendance" prefHeight="200.0" prefWidth="200.0">
                    <columns>
                      <TableColumn fx:id="colArrival" minWidth="-1.0" prefWidth="-1.0" text="Arrived" />
                        <TableColumn fx:id="colLeft" prefWidth="-1.0" text="Left" />
                    </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                     <styleClass>
                        <String fx:value="bc-col4" />
                        <String fx:value="font-s12" />
                        <String fx:value="text-h4" />
                        <String fx:value="border-col1" />
                     </styleClass>
                  </TableView>
               </children>
            </HBox>
            <HBox alignment="CENTER_RIGHT" prefHeight="22.0" prefWidth="177.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#handleEditAttended" text="+" />
                  <Button mnemonicParsing="false" text="-" />
                  <Button mnemonicParsing="false" onAction="#handleEditAttended" text="E" />
               </children>
            </HBox>

            <TableView fx:id="tbvLessons" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" prefHeight="200.0" prefWidth="200.0">
               <columns>
                  <TableColumn fx:id="colLessons" prefWidth="-1.0" text="Lessons" />
                  <TableColumn fx:id="colStart" prefWidth="-1.0" text="Start" />
                  <TableColumn fx:id="colEnd" prefWidth="-1.0" text="End" />
               </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
               <styleClass>
                  <String fx:value="bc-col4" />
                  <String fx:value="font-s12" />
                  <String fx:value="text-h4" />
                  <String fx:value="border-col1" />
               </styleClass>
               <HBox.margin>
                  <Insets right="4.0" />
               </HBox.margin>
            </TableView>
            <TableView fx:id="tbvAttendance" prefHeight="200.0" prefWidth="200.0">
               <columns>
                  <TableColumn fx:id="colArrival" minWidth="-1.0" prefWidth="-1.0" text="Arrived" />
                  <TableColumn fx:id="colLeft" prefWidth="-1.0" text="Left" />
               </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
               <styleClass>
                  <String fx:value="bc-col4" />
                  <String fx:value="font-s12" />
                  <String fx:value="text-h4" />
                  <String fx:value="border-col1" />
               </styleClass>
            </TableView>
         </children>
      </HBox>
      <Label text="Statistics of student">
         <styleClass>
            <String fx:value="text-h2" />
            <String fx:value="txt-col1" />
         </styleClass>
      </Label>
      <ChoiceBox fx:id="chbChart" minWidth="150.0">
         <styleClass>
            <String fx:value="bc-col4" />
            <String fx:value="border-col1" />
            <String fx:value="text-h4" />
            <String fx:value="font-s12" />
            <String fx:value="txt-col1" />
         </styleClass>
      </ChoiceBox>
   </children>
   <padding>
      <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
   </padding>
</VBox>
